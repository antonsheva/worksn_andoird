<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/authFormLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="10dp"
            android:hint="Логин"
            android:background="@color/main_background"/>
        <EditText
            android:id="@+id/authFormPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="5dp"
            android:inputType="textPassword"
            android:hint="Пароль"
            android:layout_marginRight="2dp"
            android:background="@color/main_background"/>
        <TextView
            android:id="@+id/authFormEnter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#9d9f9d"
            android:text="Войти"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#9d9f9d"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/authFormRegistration"
            android:textColor="@color/purple_700"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Регистрация"/>
        <TextView
            android:id="@+id/authFormRecovery"
            android:textColor="@color/purple_700"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Забыли пароль?"/>
        <TextView
            android:id="@+id/authFormAnonym"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#9d9f9d"
            android:text="Аноним"/>
    </LinearLayout>
</LinearLayout>