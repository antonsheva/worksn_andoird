<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="3dp"
    android:layout_marginTop="3dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/uProfileLogin"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:text="login"/>
    <FrameLayout

        android:layout_width="55dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:padding="2dp"
        android:layout_weight="3.8">
        <LinearLayout
            android:id="@+id/uProfileBcgrnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/u_profile_bcgrnd"
            android:visibility="gone"
            android:orientation="vertical"/>
        <ImageView
            android:id="@+id/uProfileAvatarImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:src="@drawable/no_avatar"
            android:contentDescription="avatar" />
        <ImageView
            android:id="@+id/uProfileOnline"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="end"
            android:src="@drawable/empty_100_100"/>
    </FrameLayout>



    <FrameLayout
        android:id="@+id/uProfileStars"
        android:layout_width="55dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="2dp"
        android:paddingTop="1dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"
        android:paddingBottom="1dp" >
        <LinearLayout
            android:id="@+id/starsFields"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:padding="1dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:id="@+id/starsLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/stl_stars_left"
                android:orientation="horizontal"
                />
            <LinearLayout
                android:id="@+id/starsRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/stl_stars_right"
                android:orientation="horizontal"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/starsImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stars"
            />
    </FrameLayout>
</LinearLayout>