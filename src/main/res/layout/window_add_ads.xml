<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activeAdd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/addAdsNoAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Авторизуйтесь, чтобы добавлять объявления"
        android:textSize="20sp"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/addAdsAuth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAddAdsTime"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="5dp"
                android:background="@drawable/no_active_sub_btn"
                android:text="Актуально"/>
            <ImageView
                android:id="@+id/btAddAdsGallery"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/gallery"/>
            <ImageView
                android:id="@+id/btAddAdsPhoto"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/camera"/>
            <FrameLayout
                android:id="@+id/addAdsLoadImgsIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:overScrollMode="never"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/addAdsCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="top"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/addAdsCost"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:maxLength="8"
                    android:inputType="number"
                    android:background="@color/white"
                    android:hint = "Цена"/>

                <LinearLayout
                    android:id="@+id/addAdsActivePeriod"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="@color/main_background"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="5dp"
                        android:text="показывать с"/>

                    <Spinner
                        style="@style/timeSpinner"
                        android:id="@+id/hourListStart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:entries="@array/hourList"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text=":"/>
                    <Spinner
                        style="@style/timeSpinner"
                        android:id="@+id/minListStart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:entries="@array/minList"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="до"/>
                    <Spinner
                        style="@style/timeSpinner"
                        android:id="@+id/hourListStop"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:entries="@array/hourList"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text=":"/>
                    <Spinner
                        style="@style/timeSpinner"
                        android:id="@+id/minListStop"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:entries="@array/minList"/>

                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/addAdsDescription"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="110dp"
                android:gravity="top"
                android:maxLines="5"
                android:hint="Текст объявления"
                android:textAlignment="gravity"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>