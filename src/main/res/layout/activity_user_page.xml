<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/msg_color_bcgrnd"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:id="@+id/userPageAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/no_avatar"/>
                <ImageView
                    android:id="@+id/userPageOnline"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="end"
                    android:src="@drawable/online"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:visibility="gone"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/userPageLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="login"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:gravity="end|bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="в сети с"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/userPageStars"
                        android:layout_width="60dp"
                        android:layout_height="15dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/userPageVoteQt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text=" голосов"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingEnd="5dp"
                        android:gravity="end">
                        <TextView
                            android:id="@+id/userPageRegistration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="date"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/userPageName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Имя "/>
                    <TextView
                        android:id="@+id/userPageSName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Фамилия"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/userPageLastTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Заходил ... "/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/userPageBan"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/no_ban"/>
                <ImageView
                    android:id="@+id/userPageChoose"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/no_choose"/>
                <ImageView
                    android:id="@+id/userPageKonvert"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/konvert"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userPageAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="100dp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:singleLine="false"/>
            </ScrollView>
            <include layout="@layout/underline"/>
            <EditText
                android:id="@+id/userPageReview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/msg_color_bcgrnd"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:padding="3dp"
                android:hint="Тут Вы можете оставить отзыв о данном пользователе"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/userPageBtSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/no_active_btn"
                android:layout_marginTop="5dp"
                android:text="Оставить отзыв"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    style="@style/userPageStars"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                    <ImageView
                        android:id="@+id/userPageStar1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_choose"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/userPageStars"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/userPageStar2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_choose"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/userPageStars"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/userPageStar3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_choose"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/userPageStars"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/userPageStar4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_choose"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/userPageStars"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/userPageStar5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_choose"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcVwUserPage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/userPageScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#868F8F"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/userPageBigImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/no_avatar"/>
    </FrameLayout>
</FrameLayout>