<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frmAdsCard"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#C8DFDF"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ScrollView
            android:id="@+id/adsCardDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="65dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="5dp">
                        <ImageView
                            android:id="@+id/adsCardProfileAvatar"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/no_avatar"
                            />
                        <ImageView
                            android:id="@+id/adsCardProfileOnline"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="end"
                            android:src="@drawable/online"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="1dp"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/adsCardProfileStars"
                            android:layout_width="60dp"
                            android:layout_height="15dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/adsCardLogin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:gravity="start"
                                    android:textStyle="bold"
                                    android:text="login"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="end"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/adsCardTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:textSize="11sp"
                                    android:text="time"/>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:id="@+id/adsCardLoadImg"
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:visibility="gone">
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/adsCardCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:text="category"/>
                                <TextView
                                    android:id="@+id/adsCardCost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                   />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/adsCardDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:textColor="#757575"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <ImageView
        android:id="@+id/btHideDiscus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sn_down_azure"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:alpha="0.7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:gravity="center|bottom"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="20dp"

            android:alpha="0.7"
            android:src="@drawable/bt_open_expand"/>
    </LinearLayout>

</FrameLayout>